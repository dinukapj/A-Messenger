<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:paddingTop="24dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground">
        <RelativeLayout
            android:layout_width="46dp"
            android:layout_height="46dp">
            <ImageView
                android:id="@+id/ciProfileImage"
                android:layout_width="46dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/ic_vect_default_avatar"
                />
            <ProgressBar
                android:id="@+id/pbProfileImage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:visibility="gone"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/tvMessageName"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Megan Foxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvMessageContent"
                android:gravity="left"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Hey, I like ur music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvMessageDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:maxLines="1"
                android:gravity="center_horizontal|top"
                android:layout_weight="1"
                android:text="Today"
                />
            <LinearLayout
                android:id="@+id/llNewMessagesCountBackground"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_circle_accent"
                android:layout_gravity="right">
                <TextView
                    android:id="@+id/tvPostsCount"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:gravity="center"
                    android:text="1"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="72dp"
        android:background="@color/divider_black"/>
</LinearLayout>