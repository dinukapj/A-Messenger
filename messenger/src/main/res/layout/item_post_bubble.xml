<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llBubble"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_message_bubble_white"
    android:elevation="4dp"
    android:gravity="center"
    android:minHeight="36dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingBottom="7dp">
    <LinearLayout
        android:id="@+id/llAttachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivAttachmentImage"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:background="@color/black_10a"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/cardDocument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_centerInParent="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/ivClip"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/ic_vect_clip"
                    android:scaleType="center"
                    android:background="@color/main_background"
                    />
                <TextView
                    android:id="@+id/tvFileName"
                    android:layout_margin="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="middle"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:text="Ara Damansara.pdf"/>
            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:gravity="left"
        android:layout_marginTop="7dp"
        />
</LinearLayout>